@using Microsoft.AspNetCore.Components.Authorization
@using Havenza.Web.Client.Models
@using MudBlazor
@inject CategoriesService CategoriesService
@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- Logo/Home -->
        <a class="navbar-brand" href="/">
            <img src="/images/products/1.png" alt="HAVENZA" class="havenza-logo" />
        </a>

        <!-- Toggler for mobile -->
        <button class="navbar-toggler" type="button" @onclick="ToggleSidebar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        @if (sidebarOpen)
        {
            <div class="sidebar-overlay" @onclick="CloseSidebar"></div>
            <div class="sidebar">
                <form class="sidebar-search mb-3">
                    <input type="search" placeholder="Search..." aria-label="Search" />
                </form>
                <ul>
                    <li><NavLink href="/categories">Categories</NavLink></li>
                    <li><NavLink href="/shop">Shop</NavLink></li>
                    <li><NavLink href="/library">Library</NavLink></li>
                    <li><NavLink href="/aboutcontact">About Us</NavLink></li>
                </ul>
            </div>
        }

        <!-- Main Navigation -->
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <!-- Categories dropdown (dynamic) -->
                <li class="nav-item dropdown havenza-dropdown"
                    @onmouseenter='() => OpenDropdown("categories")'
                    @onmouseleave="CloseDropdown">
                    <a class="nav-link @(activeDropdown == "categories" ? "nav-link-active" : null)"
                       href="#"
                       @onclick:preventDefault>
                        Categories
                    </a>
                    <ul class="havenza-dropdown-menu">
                        @if (categories is null || !categories.Any())
                        {
                            <li class="dropdown-item disabled">No categories</li>
                        }
                        else
                        {
                            @foreach (var cat in categories)
                            {
                                <li>
                                    <NavLink class="dropdown-item" href="@($"/categories/{cat.CategoryId}")">
                                        @cat.Name
                                    </NavLink>
                                </li>
                            }
                        }
                    </ul>
                </li>

                <!-- Shop -->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/shop">Shop</NavLink>
                </li>

                <!-- Library dropdown (static) -->
                <li class="nav-item dropdown havenza-dropdown"
                    @onmouseenter='() => OpenDropdown("library")'
                    @onmouseleave="CloseDropdown">
                    <a class="nav-link @(activeDropdown == "library" ? "nav-link-active" : null)"
                       href="#"
                       @onclick:preventDefault>
                        Library
                    </a>
                    <ul class="havenza-dropdown-menu">
                        <li><NavLink class="dropdown-item" href="/blogs">Blogs</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/stories">Stories</NavLink></li>
                    </ul>
                </li>

                <!-- About -->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/aboutcontact">About Us</NavLink>
                </li>
            </ul>

            <!-- Search + Auth/Cart Section (right aligned) -->
            <form class="d-flex me-2 position-relative search-form" role="search">
                <div class="search-wrapper @(_searchExpanded ? "search-open" : string.Empty)">
                    @if (_searchExpanded)
                    {
                        <input class="form-control search-box"
                               type="search"
                               placeholder="Search..."
                               aria-label="Search"
                               @onblur="OnSearchBlur" />
                    }

                    <button type="button"
                            class="search-toggle-btn"
                            @onclick="ToggleSearch"
                            aria-label="Toggle search">
                        <MudIcon Icon="@Icons.Material.Filled.Search" />
                    </button>
                </div>
            </form>



            <!-- User/Auth, Cart -->
            <div class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <NavLink class="nav-link" href="/account/manage" title="Account">
                            <span class="bi bi-person-circle"></span>
                        </NavLink>
                        <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Href="/cart" Color="Color.Inherit" />
                        <button type="button" class="btn btn-link nav-link" @onclick="HandleLogout" title="Logout">
                            Logout
                        </button>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink class="nav-link" href="/account/register">Register</NavLink>
                        <NavLink class="nav-link" href="/account/login" title="Login">
                            <span class="bi bi-person"></span> Login
                        </NavLink>
                            <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Href="/cart" Color="Color.Inherit" />
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>


@code {
    private bool sidebarOpen = false;
    private string? activeDropdown; // "categories", "library", or null

    private IEnumerable<CategoryDto> categories = Enumerable.Empty<CategoryDto>();

    void ToggleSidebar() => sidebarOpen = !sidebarOpen;
    void CloseSidebar() => sidebarOpen = false;

    void OpenDropdown(string name) => activeDropdown = name;
    void CloseDropdown() => activeDropdown = null;

    private void HandleLogout()
        => Navigation.NavigateTo("/account/logout", forceLoad: true);

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoriesService.GetCategoriesAsync();
    }
    private bool _searchExpanded;

    private void ToggleSearch() => _searchExpanded = !_searchExpanded;

    private void OnSearchBlur(FocusEventArgs _) => _searchExpanded = false;


}
